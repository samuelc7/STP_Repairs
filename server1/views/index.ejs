<html lang="en">
    <link rel="stylesheet" href="./style-sheet.css">
    <%- include("./partials/head.ejs") %> 
    <div class="body-div">
    <body>
        <% let fileServer = "http://127.0.0.1:8887/node-crash-course/STP_Repairs/server1/views/images/" %> 
        <%- include("./partials/nav.ejs") %> 
        <div class="main-content">
            <div class="side-bar">
                <div class="dropdown-content">
                        <section ><a href="/">Home</a></section>
                        <section><a href="/previous-fixes-gallery">Previous Fixes / Gallery</a></section>
                        <section><a href="/reviews">Reviews</a></section>
                        <section><a href="/about-us">About Us</a></section>
                        <section><a href="/contact-us">Contact Us</a></section>
                </div>
            </div>
        <div class="home-content">
            <div class="request-repair-section">
                    <img src="<%=fileServer%>phone_art2.png"
                    width="800">
                    <br>
                    <button>Request Repair</button>
            </div>
            <div class="review-section">
                    <h3>Most Recent Review: </h3>
                    <div class="image-part">
                        <img src="<%=fileServer%>IMG_8134.jpg"
                        width="600" height="250">
                    </div>
                    <div class="comment-part">
                        <table height="200">
                            <tr><th>Customer: {insert customer name} on {date}</tr></th>
                            <tr><td>looks great and was fixed in a timely fashion!</td></tr>
                        </table>
                        <br>
                        <button>Look at Reviews</button>
                    </div>
            </div>
        </div>
    </div>
       <%- include("./partials/footer.ejs") %> 

    </body>
</div>
    <style>
        body {
            background-color:lightgrey;
        }
        .body-div {
            margin-left: 10%;
            margin-right: 10%;

            background-color: whitesmoke;
        }
        table, th, td {
            background-color: white;
            border:10px solid white;
            padding: 5px;
        }
        .home-content {
            padding-left: 5%;
            padding-top: 2%;
        }
        .main-content {
            padding-top: 40px;
            display: grid;
            grid-template-columns: 20% auto auto;
            grid-template-rows: 60% auto auto;
            gap: 10px;
        }
       
        .side-bar {
            grid-column: 1;
            grid-row: 1 / 2;
            background-color: #d4d0be;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            padding: 12px 16px;
            z-index: 1;
        }
        .request-repairs-section {
            grid-column: 2 / 3;
            grid-row: 1;
        }
        .review-section {
            display: grid;
            grid-template-columns: 70% auto;
            float: left;
            margin-left: -200px;
            grid-row: 1 / 3;
        }
        .image-part {
            grid-column: 1;
        }
        .comment-part {
            grid-column: 2;
            margin-left: -40px;
        }
        section {
            display: block;
            margin-bottom: 50px;
            background-color: white;
            font-size: larger;
        }
        a {
            text-decoration: none;
            text-align: center;
        }
    </style>
</html>